@page
@model BookStore.WebClient.Pages.IndexModel

@{
    ViewData["Title"] = "Trending";
}

<div class="row mb-2">
    <div class="col-md-4">
        <div class="row no-gutters border rounded overflow-hidden flex-md-row mb-4 shadow-sm h-md-250 position-relative">
            <div class="col p-4 d-flex flex-column position-static">
                <strong class="d-inline-block mb-2 text-primary">Trending Books</strong>
                <div style="font-size: 12px; overflow-y: auto">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.Reviews[0].Review)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Reviews[0].User.UserName)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Reviews[0].InsertDate)
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Reviews) {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Review)
                                </td>
                                <td>
                                    Anonymous
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.InsertDate)
                                </td>
                            </tr>
                        }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="row no-gutters border rounded overflow-hidden flex-md-row mb-4 shadow-sm h-md-250 position-relative">
            <div class="col p-4 d-flex flex-column position-static">
                <strong class="d-inline-block mb-2 text-primary">New Books Arrivals</strong>
                <div style="font-size: 12px; overflow-y: auto">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.Books[0].Name)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Books[0].InsertDate)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Books[0].Author)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Books[0].Category)
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Books) {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Author.FullName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Category.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.InsertDate)
                                </td>
                            </tr>
                        }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="row no-gutters border rounded overflow-hidden flex-md-row mb-4 shadow-sm h-md-250 position-relative">
            <div class="col p-4 d-flex flex-column position-static">
                <strong class="d-inline-block mb-2 text-success">Latest Categories</strong>
                <div style="font-size: 12px; overflow-y: auto">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.Categories[0].Name)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Categories[0].InsertDate)
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Categories) {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.InsertDate)
                                </td>
                            </tr>
                        }
                        </tbody>
                    </table>
                </div>
            </div>

        </div>
    </div>


</div>
