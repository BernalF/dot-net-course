@page
@model BookStore.WebClient.Pages.Books.CreateModel

@{
    ViewData["Title"] = "Create Books";
}

<h1>Create Books</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Books.Name" class="control-label"></label>
                <input asp-for="Books.Name" class="form-control" />
                <span asp-validation-for="Books.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Books.AuthorId" class="control-label"></label>
                <select asp-for="Books.AuthorId" class ="form-control" asp-items="ViewBag.Authors"></select>
            </div>
            <div class="form-group">
                <label asp-for="Books.CategoryId" class="control-label"></label>
                <select asp-for="Books.CategoryId" class ="form-control" asp-items="ViewBag.Categories"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
